{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Zig C++ build current file",
            "command": "zig",
            "args": [
                "c++",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                // "-Werror",
                "-Wall",
                "-std=c++20",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}